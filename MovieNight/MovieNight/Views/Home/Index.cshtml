@model IEnumerable<MovieNight.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Release Year
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model)
            {
            <tr>
                <td>
                    @movie.Title
                </td>
                <td>
                    @movie.ReleaseYear
                </td>
            </tr>
            }
    </tbody>
</table>
