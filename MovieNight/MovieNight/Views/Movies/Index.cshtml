@model MovieNight.Data.ViewModels.IMoviesViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Movies for you, @Model.Name</h1>

<h3>There are @Model.MoviesCount movies for you, enjoy!</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Release Year
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @movie.Title
                </td>
                <td>
                    @movie.ReleaseYear
                </td>
            </tr>
        }
    </tbody>
</table>
